doctype html
html

  include partials/_head.jade

  body
    .icon-bar.three-up
      a(href="profile.html").item
        img(src="http://cdn.flaticon.com/png/256/27653.png")
        label Profile
      a(href="match.html").item
        img(src="http://cdn.flaticon.com/png/256/32441.png")
        label Matches
      a(href="index.html" id="logout").item
        img(src="http://cdn.flaticon.com/png/256/27653.png")
        label Logout

    .row
      .small-6.columns.small-offset-3
        .profile_page_headers
          h1 Complete your profile, you ghoul!
        div
          form(id="userProfileInfoForm")
            lable Name
            input(id="userProfileName" type="text" placeholder="Name")
            lable Image
            input(id="userProfileImage" type="text" placeholder="Image URL")
            lable Bio
            input(id="userProfileBio" type="text" placeholder="I'm a pretty cool ghoul who loves the Monster Mash!")
            lable Interests
            input(id="userProfileInterests" type="text" placeholder="haunting, being an apparition, floating")
            button(id="submitUserDataToPage") Submit

          div.profile_info_holder
            img.profile_picture(src="http://vignette4.wikia.nocookie.net/mansionsofmadness/images/4/4d/Cthonian.jpg/revision/latest/scale-to-width/212?cb=20130219200035")

    script(src="vendor/jquery.min.js")
    script(src="vendor/lodash.min.js")
    script(src="vendor/firebase.js")
    script(src="js/main.js")

